pkgname=dict-freedict-eng-deu
pkgver=0.3
pkgrel=1
pkgdesc="English <-> German dictionaries for dictd from Freedict.org (eng-deu 0.3, deu-deu 0.3)"
arch=('i686' 'x86_64')
url="http://www.freedict.org/"
license=('GPL')
depends=(dictd)
#provides=('dict-freedict-deu-eng')
install=freedict-eng-deu.install
source=('http://downloads.sourceforge.net/sourceforge/freedict/eng-deu.tar.gz' 'http://downloads.sourceforge.net/sourceforge/freedict/deu-eng.tar.gz')
md5sums=('31139a9f0e7a95f8479097faef728775' 'b4ecca6222e030acf0bc709ef0c44b10')

build()
{
	install -Dm644 $srcdir/eng-deu.dict.dz $pkgdir/usr/share/dictd/eng-deu.dict.dz
	install -Dm644 $srcdir/eng-deu.index $pkgdir/usr/share/dictd/eng-deu.index
	install -Dm644 $srcdir/deu-eng.dict.dz $pkgdir/usr/share/dictd/deu-eng.dict.dz
	install -Dm644 $srcdir/deu-eng.index $pkgdir/usr/share/dictd/deu-eng.index
}
