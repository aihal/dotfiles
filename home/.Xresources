!----------------------------------------------------------------------------
! file:     ~/.Xdefaults
! author:   Ogion
! this was a vim modeline:enc=utf-8:ai:si:et:ts=4:sw=4:ft=xdefaults:
!----------------------------------------------------------------------------
!The colors 0-7 are the 'normal' colors, while colors 8-15 are their 'bright' counterparts (used for highlighting, etc.)


Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintslight
Xcursor*theme:      Vanilla-DMZ-AA
urxvt*font:         xft:dejavu sans mono:pixelsize=14:antialias=false
urxvt*urgentOnBell: true
urxvt*scrollBar:    false

!URxvt.perl-ext-common: default,matcher
!URxvt.urlLauncher: /usr/bin/firefox
!URxvt.colorUL: #86a2be
URxvt.perl-ext-common: default,url-select,keyboard-select
URxvt.keysym.M-u:      perl:url-select:select_next
URxvt.keysym.M-Escape:  perl:keyboard-select:activate
URxvt.url-select.launcher:        firefox -new-tab
!URxvt.matcher.pattern:  \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]
!URxvt.keysym.M-u:    perl:matcher
!URxvt.matcher.button:     3
!URxvt.matcher.pattern.2:  \\B(/\\S+?):(\\d+)(?=:|$)
!URxvt.matcher.launcher.2: gvim +$2 $1

!!! rofi - dmenu replacement and i3 window switcher
rofi.switchers:        window,run,ssh
rofi.opacity:          100
rofi.width:            100
rofi.lines:            15
rofi.columns:          1
rofi.font:             mono12
rofi.fg:               #222222
rofi.bg:               #f2f1f0
rofi.hlfg:             #ffffff
rofi.hlbg:             #005577
rofi.bc:               black
rofi.bw:               0
rofi.location:         2
rofi.padding:          3
rofi.yoffset:          0
rofi.xoffset:          0
rofi.fixed-num-lines:  false
rofi.hmode:            false
rofi.terminal:         urxvtc
rofi.ssh-client:       ssh
rofi.ssh-command:      {terminal} -e {ssh-client} {host}
rofi.run-command:      {cmd}
rofi.run-shell-command:  {terminal} -e {cmd}
rofi.disable-history:  true
rofi.levenshtein-sort: false
rofi.key:              F12
rofi.rkey:             mod1+F2
rofi.skey:             mod1+F3




